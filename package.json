{
  "name": "tying.ai",
  "version": "2.0.0",
  "private": true,
  "description": "Tying.ai - Career guidance and position information platform with modern architecture",
  "type": "module",
  "scripts": {
    "data:positions": "node scripts/generate-positions-json.mjs",
    "predev": "npm run data:positions",
    "dev": "astro dev --host localhost --port 3000",
    "dev:fast": "astro dev --host localhost --port 3000 --no-open",
    "dev:legacy": "serve -s . -l 3000 --cors --single",
    "dev:watch": "npm run build:simple && serve -s dist -l 3000 --watch",
    "prebuild": "npm run data:positions",
    "prebuild:simple": "npm run data:positions",
    "build": "astro build",
    "build:legacy": "bash build.sh",
    "build:simple": "astro build",
    "build:dev": "npm run build:simple && npm run start",
    "build:ts": "npx tsc --project tsconfig.json",
    "build:ts:watch": "npx tsc --project tsconfig.json --watch",
    "dev:ts": "npm run build:ts && npm run dev:legacy",
    "start": "astro preview",
    "start:legacy": "serve -s dist -l 3000",
    "start:prod": "npm run build && npm run start",
    "clean": "rm -rf dist .astro node_modules/.cache",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "analyze": "npm run build && npx vite-bundle-analyzer dist",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "perf": "npm run build && npm run lighthouse",
