---
export interface Props {
  variant?: 'primary' | 'ghost';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  class?: string;
}

const {
  variant = 'primary',
  href,
  type = 'button',
  class: className = '',
} = Astro.props;

// Modern Button - Clean & Interactive
const baseClasses = 'inline-flex items-center justify-center px-4 py-2 text-sm font-medium rounded-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed';

const variantClasses = {
  primary: 'bg-blue-600 text-white hover:bg-blue-700 focus:ring-blue-500 shadow-sm hover:shadow-md',
  ghost: 'bg-transparent text-gray-700 hover:bg-gray-100 focus:ring-gray-500',
};

const cssClasses = [
  baseClasses,
  variantClasses[variant],
  className,
].join(' ');
---

{href ? (
  <a href={href} class={cssClasses}>
    <slot />
  </a>
) : (
  <button type={type} class={cssClasses}>
    <slot />
  </button>
)}
