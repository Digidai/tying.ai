---
export interface Props {
  variant?: 'primary' | 'ghost';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  class?: string;
}

const { variant = 'primary', href, type = 'button', class: className = '' } = Astro.props;

// Notion 风格按钮 - 极简
const baseClasses = 'inline-flex items-center justify-center px-4 py-2 text-sm font-medium';

const variantClasses = {
  primary: 'bg-notion-black text-white',
  ghost: 'bg-white text-notion-text border border-notion-border',
};

const cssClasses = [baseClasses, variantClasses[variant], className].join(' ');
---

{
  href ? (
    <a href={href} class={cssClasses}>
      <slot />
    </a>
  ) : (
    <button type={type} class={cssClasses}>
      <slot />
    </button>
  )
}
