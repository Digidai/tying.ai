---
export interface Props {
  class?: string;
}

const {
  class: className = '',
} = Astro.props;

// Modern Card - Clean, Rounded, with subtle hover effects
const cssClasses = `bg-white border border-gray-100 rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300 ${className}`;
---

<div class={cssClasses}>
  <slot />
</div>
