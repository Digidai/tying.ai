---
export interface Props {
  value: string;
  label: string;
  description?: string;
  class?: string;
}

const {
  value,
  label,
  description,
  class: className = '',
} = Astro.props;
---

<div class={`text-center ${className}`}>
  <div class="text-3xl md:text-4xl font-bold text-primary-600 mb-2 font-mono">
    {value}
  </div>
  <div class="text-lg font-semibold text-neutral-900 mb-1">
    {label}
  </div>
  {description && (
    <div class="text-sm text-neutral-600">
      {description}
    </div>
  )}
</div>