---
export interface Props {
  name: string;
  role: string;
  content: string;
  avatar?: string;
  rating?: number;
  class?: string;
}

const {
  name,
  role,
  content,
  avatar,
  rating = 5,
  class: className = '',
} = Astro.props;

// 生成星级评分
const renderStars = (rating: number) => {
  const stars = [];
  const fullStars = Math.floor(rating);
  const hasHalfStar = rating % 1 !== 0;

  for (let i = 0; i < fullStars; i++) {
    stars.push(
      `<svg class="w-5 h-5 text-warning-400" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
      </svg>`
    );
  }

  if (hasHalfStar) {
    stars.push(
      `<svg class="w-5 h-5 text-warning-400" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
      </svg>`
    );
  }

  const emptyStars = 5 - Math.ceil(rating);
  for (let i = 0; i < emptyStars; i++) {
    stars.push(
      `<svg class="w-5 h-5 text-neutral-300" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
      </svg>`
    );
  }

  return stars.join('');
};
---

<div class={`card ${className}`}>
  <div class="p-6">
    <!-- 评分 -->
    <div class="flex items-center mb-4" set:html={renderStars(rating)}></div>

    <!-- 内容 -->
    <blockquote class="text-neutral-600 mb-6 italic leading-relaxed">
      "{content}"
    </blockquote>

    <!-- 用户信息 -->
    <div class="flex items-center">
      {avatar ? (
        <img
          src={avatar}
          alt={name}
          class="w-12 h-12 rounded-full mr-4 object-cover"
          loading="lazy"
        />
      ) : (
        <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center mr-4">
          <span class="text-primary-600 font-semibold text-lg">
            {name.charAt(0).toUpperCase()}
          </span>
        </div>
      )}

      <div>
        <div class="font-semibold text-neutral-900">
          {name}
        </div>
        <div class="text-sm text-neutral-600">
          {role}
        </div>
      </div>
    </div>
  </div>
</div>