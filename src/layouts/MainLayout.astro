---
import BaseLayout from './BaseLayout.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  keywords?: string;
  customStructuredData?: Record<string, unknown>;
}

const {
  title,
  description,
  image = 'https://placehold.co/1200x630/png?text=Tying.ai',
  keywords,
  customStructuredData,
} = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  image={image}
  keywords={keywords}
  customStructuredData={customStructuredData}
>
  <!-- Notion 风格导航栏 - 简洁无装饰 -->
  <header class="border-b border-notion-border bg-white" id="navigation">
    <nav class="max-w-notion-wide mx-auto px-8 py-4">
      <div class="flex items-center justify-between">
        <!-- Logo -->
        <a href="/" class="flex items-center space-x-2">
          <span class="text-lg font-semibold text-notion-text">Tying.ai</span>
        </a>

        <!-- 桌面导航 -->
        <div class="hidden md:flex items-center space-x-6">
          <a href="/" class="text-notion-text hover:no-underline">Home</a>
          <a href="/wiki" class="text-notion-text hover:no-underline">Career Wiki</a>
          <a href="/company/" class="text-notion-text hover:no-underline">Company</a>
          <a href="/report" class="text-notion-text hover:no-underline">Industry Reports</a>
        </div>

        <!-- 移动端菜单按钮 -->
        <button
          class="md:hidden p-2"
          id="mobile-menu-button"
          aria-label="Menu"
          aria-expanded="false"
          aria-controls="mobile-menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>

      <!-- 移动端菜单 -->
      <div class="hidden md:hidden mt-4 pt-4 border-t border-notion-border" id="mobile-menu">
        <div class="flex flex-col space-y-3">
          <a href="/" class="text-notion-text">Home</a>
          <a href="/wiki" class="text-notion-text">Career Wiki</a>
          <a href="/company/" class="text-notion-text">Company</a>
          <a href="/report" class="text-notion-text">Industry Reports</a>
        </div>
      </div>
    </nav>
  </header>

  <!-- 主要内容 -->
  <main class="min-h-screen" id="main-content">
    <slot />
  </main>

  <!-- Notion 风格页脚 - 极简版 -->
  <footer class="border-t border-notion-border bg-white">
    <div class="max-w-notion-wide mx-auto px-8 py-6">
      <div class="flex justify-center space-x-6 mb-4">
        <a
          href="https://twitter.com/tying_ai"
          target="_blank"
          rel="noopener noreferrer"
          class="text-notion-text-light hover:text-notion-text transition-colors"
          aria-label="Twitter"
        >
          <img src="/icons/twitter.svg" class="w-5 h-5 opacity-60 hover:opacity-100 transition-opacity" alt="Twitter" />
        </a>
        <a
          href="https://github.com/Digidai/tying.ai"
          target="_blank"
          rel="noopener noreferrer"
          class="text-notion-text-light hover:text-notion-text transition-colors"
          aria-label="GitHub"
        >
          <img src="/icons/github.svg" class="w-5 h-5 opacity-60 hover:opacity-100 transition-opacity" alt="GitHub" />
        </a>
        <a
          href="https://linkedin.com/company/tying-ai"
          target="_blank"
          rel="noopener noreferrer"
          class="text-notion-text-light hover:text-notion-text transition-colors"
          aria-label="LinkedIn"
        >
          <img src="/icons/linkedin.svg" class="w-5 h-5 opacity-60 hover:opacity-100 transition-opacity" alt="LinkedIn" />
        </a>
        <a
          href="/rss.xml"
          class="text-notion-text-light hover:text-notion-text transition-colors"
          aria-label="RSS Feed"
        >
          <img src="/icons/rss.svg" class="w-5 h-5 opacity-60 hover:opacity-100 transition-opacity" alt="RSS" />
        </a>
      </div>
      <p class="text-sm text-notion-text-light text-center">
        &copy; 2024 <a href="/" class="text-notion-text hover:underline">Tying.ai</a>. Career
        Guidance Platform.
      </p>
    </div>
  </footer>
</BaseLayout>
