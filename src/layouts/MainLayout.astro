---
import BaseLayout from './BaseLayout.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  showHero?: boolean;
  heroTitle?: string;
  heroSubtitle?: string;
  showCTA?: boolean;
}

const {
  title,
  description,
  image = "/images/hero/tying-ai-hero.jpg",
  showHero = true,
  heroTitle = "Career Guidance & Position Information",
  heroSubtitle = "Discover your path with comprehensive career insights and professional guidance",
  showCTA = true,
} = Astro.props;
---

<BaseLayout title={title} description={description} image={image}>
  <!-- 导航栏 -->
  <header class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-md border-b border-neutral-200 transition-all duration-300" id="navigation">
    <nav class="container mx-auto px-4 py-4">
      <div class="flex items-center justify-between">
        <!-- Logo -->
        <div class="flex items-center space-x-2">
          <div class="w-8 h-8 bg-gradient-to-br from-primary-500 to-primary-700 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <span class="text-xl font-bold text-neutral-900">Tying.ai</span>
        </div>

        <!-- 桌面导航 -->
        <div class="hidden md:flex items-center space-x-8">
          <a href="/" class="text-neutral-600 hover:text-primary-600 transition-colors duration-200">Home</a>
          <a href="/search" class="text-neutral-600 hover:text-primary-600 transition-colors duration-200">Job Search</a>
          <a href="/wiki/" class="text-neutral-600 hover:text-primary-600 transition-colors duration-200">Career Wiki</a>
          <a href="/position/" class="text-neutral-600 hover:text-primary-600 transition-colors duration-200">Position Guide</a>
          <a href="/report/" class="text-neutral-600 hover:text-primary-600 transition-colors duration-200">Industry Reports</a>
        </div>

        <!-- CTA按钮 -->
        <div class="hidden md:flex items-center space-x-4">
          <button class="px-4 py-2 text-primary-600 hover:text-primary-700 transition-colors duration-200">
            Sign In
          </button>
          <button class="px-6 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors duration-200 shadow-md hover:shadow-lg">
            Get Started
          </button>
        </div>

        <!-- 移动端菜单按钮 -->
        <button class="md:hidden p-2 rounded-lg hover:bg-neutral-100 transition-colors duration-200" id="mobile-menu-button">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>

      <!-- 移动端菜单 -->
      <div class="hidden md:hidden mt-4 pb-4 border-t border-neutral-200" id="mobile-menu">
        <div class="flex flex-col space-y-3 pt-4">
          <a href="/" class="text-neutral-600 hover:text-primary-600 transition-colors duration-200">Home</a>
          <a href="/search" class="text-neutral-600 hover:text-primary-600 transition-colors duration-200">Job Search</a>
          <a href="/wiki/" class="text-neutral-600 hover:text-primary-600 transition-colors duration-200">Career Wiki</a>
          <a href="/position/" class="text-neutral-600 hover:text-primary-600 transition-colors duration-200">Position Guide</a>
          <a href="/report/" class="text-neutral-600 hover:text-primary-600 transition-colors duration-200">Industry Reports</a>
          <div class="flex flex-col space-y-2 pt-4 border-t border-neutral-200">
            <button class="px-4 py-2 text-primary-600 hover:text-primary-700 transition-colors duration-200 text-left">
              Sign In
            </button>
            <button class="px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors duration-200">
              Get Started
            </button>
          </div>
        </div>
      </div>
    </nav>
  </header>

  <!-- 主要内容 -->
  <main class="flex-1" id="main-content">
    <!-- Hero 区域 -->
    {showHero && (
      <section class="relative overflow-hidden bg-gradient-to-br from-primary-50 via-white to-primary-50">
        <!-- 背景装饰 -->
        <div class="absolute inset-0 overflow-hidden">
          <div class="absolute -top-40 -right-40 w-80 h-80 bg-primary-200 rounded-full opacity-20 blur-3xl"></div>
          <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-primary-300 rounded-full opacity-20 blur-3xl"></div>
        </div>

        <!-- Hero 内容 -->
        <div class="relative container mx-auto px-4 py-20 md:py-32">
          <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-4xl md:text-6xl font-bold text-neutral-900 mb-6 leading-tight">
              {heroTitle}
            </h1>
            <p class="text-xl md:text-2xl text-neutral-600 mb-8 leading-relaxed max-w-3xl mx-auto">
              {heroSubtitle}
            </p>

            {showCTA && (
              <div class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-4">
                <button class="px-8 py-4 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1 text-lg font-semibold">
                  Explore Careers
                </button>
                <button class="px-8 py-4 bg-white text-primary-600 border-2 border-primary-600 rounded-lg hover:bg-primary-50 transition-all duration-200 shadow-md hover:shadow-lg text-lg font-semibold">
                  View Reports
                </button>
              </div>
            )}

            <!-- 统计数据 -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-16 max-w-2xl mx-auto">
              <div class="text-center">
                <div class="text-3xl md:text-4xl font-bold text-primary-600 mb-2">75+</div>
                <div class="text-neutral-600">Career Guides</div>
              </div>
              <div class="text-center">
                <div class="text-3xl md:text-4xl font-bold text-primary-600 mb-2">50K+</div>
                <div class="text-neutral-600">Active Users</div>
              </div>
              <div class="text-center">
                <div class="text-3xl md:text-4xl font-bold text-primary-600 mb-2">95%</div>
                <div class="text-neutral-600">Success Rate</div>
              </div>
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- 页面内容插槽 -->
    <slot />
  </main>

  <!-- 页脚 -->
  <footer class="bg-neutral-900 text-white">
    <div class="container mx-auto px-4 py-12">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <!-- 公司信息 -->
        <div class="col-span-1 md:col-span-2">
          <div class="flex items-center space-x-2 mb-4">
            <div class="w-8 h-8 bg-gradient-to-br from-primary-500 to-primary-700 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <span class="text-xl font-bold">Tying.ai</span>
          </div>
          <p class="text-neutral-400 mb-4 max-w-md">
            Your comprehensive career guidance platform, providing professional insights and position information to help you make informed career decisions.
          </p>
          <div class="flex space-x-4">
            <a href="#" class="text-neutral-400 hover:text-white transition-colors duration-200">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a href="#" class="text-neutral-400 hover:text-white transition-colors duration-200">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </a>
            <a href="#" class="text-neutral-400 hover:text-white transition-colors duration-200">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- 快速链接 -->
        <div>
          <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
          <ul class="space-y-2">
            <li><a href="/wiki/" class="text-neutral-400 hover:text-white transition-colors duration-200">Career Wiki</a></li>
            <li><a href="/position/" class="text-neutral-400 hover:text-white transition-colors duration-200">Position Guide</a></li>
            <li><a href="/report/" class="text-neutral-400 hover:text-white transition-colors duration-200">Industry Reports</a></li>
            <li><a href="/about/" class="text-neutral-400 hover:text-white transition-colors duration-200">About Us</a></li>
          </ul>
        </div>

        <!-- 支持 -->
        <div>
          <h3 class="text-lg font-semibold mb-4">Support</h3>
          <ul class="space-y-2">
            <li><a href="/help/" class="text-neutral-400 hover:text-white transition-colors duration-200">Help Center</a></li>
            <li><a href="/contact/" class="text-neutral-400 hover:text-white transition-colors duration-200">Contact Us</a></li>
            <li><a href="/privacy/" class="text-neutral-400 hover:text-white transition-colors duration-200">Privacy Policy</a></li>
            <li><a href="/terms/" class="text-neutral-400 hover:text-white transition-colors duration-200">Terms of Service</a></li>
          </ul>
        </div>
      </div>

      <!-- 底部信息 -->
      <div class="border-t border-neutral-800 mt-8 pt-8 text-center text-neutral-400">
        <p>&copy; 2024 Tying.ai. All rights reserved. Made with ❤️ for career professionals.</p>
      </div>
    </div>
  </footer>
</BaseLayout>

<script>
  // 移动端菜单切换
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }

    // 滚动时导航栏效果
    const navigation = document.getElementById('navigation');
    if (navigation) {
      let lastScrollY = window.scrollY;

      window.addEventListener('scroll', () => {
        const currentScrollY = window.scrollY;

        if (currentScrollY > 100) {
          navigation.classList.add('shadow-md');
          navigation.classList.add('bg-white/95');
          navigation.classList.remove('bg-white/80');
        } else {
          navigation.classList.remove('shadow-md');
          navigation.classList.add('bg-white/80');
          navigation.classList.remove('bg-white/95');
        }

        lastScrollY = currentScrollY;
      });
    }
  });
</script>