---
import MainLayout from '@/layouts/MainLayout.astro';

const pageTitle = "Tying.ai - Career Guidance Platform";
const pageDescription = "Discover your perfect career path with comprehensive career guidance and position information.";
---

<MainLayout title={pageTitle} description={pageDescription}>
  <div class="max-w-notion-wide mx-auto px-8 py-24">
    <!-- 主标题 -->
    <div class="mb-16 text-center">
      <h1 class="text-5xl font-bold text-notion-text mb-6">
        Career Guidance Platform
      </h1>
      <p class="text-xl text-notion-text-light max-w-2xl mx-auto">
        Comprehensive career guidance and position insights to help you make informed decisions about your professional future.
      </p>
    </div>

    <!-- 核心功能列表 -->
    <div class="mb-20">
      <h2 class="text-2xl font-bold text-notion-text mb-8">What We Offer</h2>
      <div class="space-y-6">
        <div>
          <h3 class="text-lg font-semibold text-notion-text mb-2">Career Encyclopedia</h3>
          <p class="text-notion-text-light mb-2">
            100+ detailed career profiles with job descriptions, required skills, and career growth paths.
          </p>
          <a href="/wiki" class="text-notion-text underline">Browse careers →</a>
        </div>

        <div>
          <h3 class="text-lg font-semibold text-notion-text mb-2">Industry Reports</h3>
          <p class="text-notion-text-light mb-2">
            Data-driven insights and market trends to help you make informed career decisions.
          </p>
          <a href="/report" class="text-notion-text underline">Read reports →</a>
        </div>
      </div>
    </div>

    <!-- 热门职位 -->
    <div>
      <h2 class="text-2xl font-bold text-notion-text mb-8">Popular Career Paths</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <a href="/wiki/software-engineer" class="block p-6 border border-notion-border hover:border-notion-text">
          <h3 class="font-semibold text-notion-text mb-2">Software Engineer</h3>
          <p class="text-sm text-notion-text-light">Design, develop, and maintain software applications and systems.</p>
        </a>

        <a href="/wiki/data-scientist" class="block p-6 border border-notion-border hover:border-notion-text">
          <h3 class="font-semibold text-notion-text mb-2">Data Scientist</h3>
          <p class="text-sm text-notion-text-light">Analyze complex data to help organizations make better decisions.</p>
        </a>

        <a href="/wiki/product-manager" class="block p-6 border border-notion-border hover:border-notion-text">
          <h3 class="font-semibold text-notion-text mb-2">Product Manager</h3>
          <p class="text-sm text-notion-text-light">Lead product strategy and development from concept to launch.</p>
        </a>

        <a href="/wiki/ux-designer" class="block p-6 border border-notion-border hover:border-notion-text">
          <h3 class="font-semibold text-notion-text mb-2">UX Designer</h3>
          <p class="text-sm text-notion-text-light">Create intuitive user experiences for digital products.</p>
        </a>

        <a href="/wiki/marketing-manager" class="block p-6 border border-notion-border hover:border-notion-text">
          <h3 class="font-semibold text-notion-text mb-2">Marketing Manager</h3>
          <p class="text-sm text-notion-text-light">Develop and execute marketing strategies to drive business growth.</p>
        </a>

        <a href="/wiki/financial-analyst" class="block p-6 border border-notion-border hover:border-notion-text">
          <h3 class="font-semibold text-notion-text mb-2">Financial Analyst</h3>
          <p class="text-sm text-notion-text-light">Evaluate financial data and provide investment recommendations.</p>
        </a>
      </div>
    </div>
  </div>
</MainLayout>
