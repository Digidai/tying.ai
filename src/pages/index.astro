---
import MainLayout from '@/layouts/MainLayout.astro';
import Button from '@/components/ui/Button.astro';

const pageTitle = 'Tying.ai - Career Guidance Platform';
const pageDescription =
  'Discover your perfect career path with comprehensive career guidance and position information.';
---

<MainLayout title={pageTitle} description={pageDescription}>
  <div class="max-w-notion-wide mx-auto px-4 md:px-8 py-20 md:py-32">
    <!-- 主视觉区域 - Hero Section -->
    <div class="mb-24 md:mb-32 text-center">
      <h1 class="text-4xl md:text-6xl font-bold text-notion-text mb-6 md:mb-8 leading-tight tracking-tight">
        Navigate Your Career Path with Data-Driven Insights
      </h1>
      <p class="text-xl md:text-2xl text-notion-text-light max-w-3xl mx-auto leading-relaxed mb-10">
        Explore comprehensive career guides, real-time company funding data, and in-depth industry reports to make smarter professional decisions.
      </p>
      
      <div class="flex justify-center gap-4">
        <Button href="/wiki" variant="secondary" class="bg-gray-100 text-notion-text hover:bg-gray-200 px-8 py-3 text-lg rounded-lg transition-colors">
          Browse Wiki
        </Button>
      </div>
    </div>

    <!-- 核心功能列表 -->
    <div class="mb-20">
      <h2 class="text-2xl font-bold text-notion-text mb-8">What We Offer</h2>
      <div class="space-y-6">
        <div>
          <h3 class="text-lg font-semibold text-notion-text mb-2">Career Encyclopedia</h3>
          <p class="text-notion-text-light mb-2">
            100+ detailed career profiles with job descriptions, required skills, and career growth
            paths.
          </p>
          <a href="/wiki" class="text-notion-text underline">Browse careers →</a>
        </div>

        <div>
          <h3 class="text-lg font-semibold text-notion-text mb-2">Company Funding Database</h3>
          <p class="text-notion-text-light mb-2">
            Track the latest funding rounds, investments, and startup news. Browse 100+ companies
            with detailed funding information.
          </p>
          <a href="/company/" class="text-notion-text underline">View companies →</a>
        </div>

        <div>
          <h3 class="text-lg font-semibold text-notion-text mb-2">Industry Reports</h3>
          <p class="text-notion-text-light mb-2">
            Data-driven insights and market trends to help you make informed career decisions.
          </p>
          <a href="/report" class="text-notion-text underline">Read reports →</a>
        </div>
      </div>
    </div>

    <!-- 热门职位 -->
    <div>
      <h2 class="text-2xl font-bold text-notion-text mb-8">Popular Career Paths</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <a
          href="/wiki/software-engineer"
          class="block p-6 border border-notion-border hover:border-notion-text"
        >
          <h3 class="font-semibold text-notion-text mb-2">Software Engineer</h3>
          <p class="text-sm text-notion-text-light">
            Design, develop, and maintain software applications and systems.
          </p>
        </a>

        <a
          href="/wiki/data-scientist"
          class="block p-6 border border-notion-border hover:border-notion-text"
        >
          <h3 class="font-semibold text-notion-text mb-2">Data Scientist</h3>
          <p class="text-sm text-notion-text-light">
            Analyze complex data to help organizations make better decisions.
          </p>
        </a>

        <a
          href="/wiki/product-manager"
          class="block p-6 border border-notion-border hover:border-notion-text"
        >
          <h3 class="font-semibold text-notion-text mb-2">Product Manager</h3>
          <p class="text-sm text-notion-text-light">
            Lead product strategy and development from concept to launch.
          </p>
        </a>

        <a
          href="/wiki/ux-designer"
          class="block p-6 border border-notion-border hover:border-notion-text"
        >
          <h3 class="font-semibold text-notion-text mb-2">UX Designer</h3>
          <p class="text-sm text-notion-text-light">
            Create intuitive user experiences for digital products.
          </p>
        </a>

        <a
          href="/wiki/marketing-manager"
          class="block p-6 border border-notion-border hover:border-notion-text"
        >
          <h3 class="font-semibold text-notion-text mb-2">Marketing Manager</h3>
          <p class="text-sm text-notion-text-light">
            Develop and execute marketing strategies to drive business growth.
          </p>
        </a>

        <a
          href="/wiki/financial-analyst"
          class="block p-6 border border-notion-border hover:border-notion-text"
        >
          <h3 class="font-semibold text-notion-text mb-2">Financial Analyst</h3>
          <p class="text-sm text-notion-text-light">
            Evaluate financial data and provide investment recommendations.
          </p>
        </a>
      </div>
    </div>
  </div>
</MainLayout>
