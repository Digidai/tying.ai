---
import MainLayout from '@/layouts/BaseLayout.astro';

const pageTitle = "Position Guide - Detailed Job Guides & Career Paths | Tying.ai";
const pageDescription = "Explore detailed position guides and career paths across technology, engineering, and business fields. Get comprehensive insights into job requirements, skills, and career trajectories.";
---

<MainLayout title={pageTitle} description={pageDescription}>
  <main class="min-h-screen bg-gradient-to-br from-neutral-50 to-white">
    <!-- Hero Section -->
    <section class="relative overflow-hidden bg-primary-600 text-white">
      <div class="absolute inset-0 bg-black opacity-20"></div>
      <div class="relative container mx-auto px-4 py-24">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl md:text-6xl font-bold mb-6">
            Position Guides
          </h1>
          <p class="text-xl md:text-2xl mb-8 opacity-90">
            Comprehensive career guidance for technology, engineering, and business roles
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/search" class="px-8 py-3 bg-white text-primary-600 rounded-lg font-semibold hover:bg-neutral-100 transition-colors">
              Browse Positions
            </a>
            <a href="/wiki" class="px-8 py-3 border-2 border-white text-white rounded-lg font-semibold hover:bg-white hover:text-primary-600 transition-colors">
              Career Wiki
            </a>
          </div>
        </div>
      </div>
      <div class="absolute bottom-0 left-0 right-0">
        <svg class="w-full h-12 fill-neutral-50" viewBox="0 0 1440 120" preserveAspectRatio="none">
          <path d="M0,96L48,90.7C96,85,192,75,288,72C384,69,480,75,576,80C672,85,768,91,864,90.7C960,91,1056,85,1152,80C1248,75,1344,69,1392,66.7L1440,64L1440,120L1392,120C1344,120,1248,120,1152,120C1056,120,960,120,864,120C768,120,672,120,576,120C480,120,384,120,288,120C192,120,96,120,48,120L0,120Z"></path>
        </svg>
      </div>
    </section>

    <!-- Featured Positions -->
    <section class="py-20 container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-neutral-900 mb-4">
            Featured Position Guides
          </h2>
          <p class="text-xl text-neutral-600 max-w-3xl mx-auto">
            In-depth guides for the most in-demand positions in today's job market
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Software Engineer -->
          <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
            <div class="p-8">
              <div class="w-16 h-16 bg-blue-100 rounded-lg flex items-center justify-center mb-6">
                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-neutral-900 mb-3">Software Engineer</h3>
              <p class="text-neutral-600 mb-6">
                Complete guide to software engineering careers, from entry-level to senior positions.
              </p>
              <a href="/position/software-engineer/" class="inline-flex items-center text-primary-600 font-semibold hover:text-primary-700">
                View Guide
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>

          <!-- AI Product Manager -->
          <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
            <div class="p-8">
              <div class="w-16 h-16 bg-purple-100 rounded-lg flex items-center justify-center mb-6">
                <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-neutral-900 mb-3">AI Product Manager</h3>
              <p class="text-neutral-600 mb-6">
                Navigate the intersection of AI technology and product management.
              </p>
              <a href="/position/ai-product-manager/" class="inline-flex items-center text-primary-600 font-semibold hover:text-primary-700">
                View Guide
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>

          <!-- Data Scientist -->
          <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
            <div class="p-8">
              <div class="w-16 h-16 bg-green-100 rounded-lg flex items-center justify-center mb-6">
                <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-neutral-900 mb-3">Data Scientist</h3>
              <p class="text-neutral-600 mb-6">
                Master data analysis, machine learning, and statistical modeling.
              </p>
              <a href="/position/data-scientist/" class="inline-flex items-center text-primary-600 font-semibold hover:text-primary-700">
                View Guide
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Career Categories -->
    <section class="py-20 bg-neutral-50">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-neutral-900 mb-4">
              Explore Career Categories
            </h2>
            <p class="text-xl text-neutral-600 max-w-3xl mx-auto">
              Find detailed guides for positions across different industries and disciplines
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Technology -->
            <div class="bg-white rounded-lg p-6 hover:shadow-lg transition-shadow">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-neutral-900 mb-2">Technology</h3>
              <p class="text-neutral-600 text-sm mb-4">
                Software development, AI/ML, cloud computing
              </p>
              <a href="/wiki/software-engineer/" class="text-primary-600 text-sm font-medium hover:text-primary-700">
                Explore Technology →
              </a>
            </div>

            <!-- Engineering -->
            <div class="bg-white rounded-lg p-6 hover:shadow-lg transition-shadow">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-neutral-900 mb-2">Engineering</h3>
              <p class="text-neutral-600 text-sm mb-4">
                Chemical, mechanical, civil, and systems engineering
              </p>
              <a href="/wiki/1-1-aerospace-engineering-and-operations-technologists-and-technicians/" class="text-primary-600 text-sm font-medium hover:text-primary-700">
                Explore Engineering →
              </a>
            </div>

            <!-- Business -->
            <div class="bg-white rounded-lg p-6 hover:shadow-lg transition-shadow">
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-neutral-900 mb-2">Business</h3>
              <p class="text-neutral-600 text-sm mb-4">
                Product management, marketing, finance, and operations
              </p>
              <a href="/wiki/marketing/" class="text-primary-600 text-sm font-medium hover:text-primary-700">
                Explore Business →
              </a>
            </div>

            <!-- Creative -->
            <div class="bg-white rounded-lg p-6 hover:shadow-lg transition-shadow">
              <div class="w-12 h-12 bg-pink-100 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-neutral-900 mb-2">Creative</h3>
              <p class="text-neutral-600 text-sm mb-4">
                Design, content creation, arts, and multimedia
              </p>
              <a href="/wiki/2.3-fine-artists/" class="text-primary-600 text-sm font-medium hover:text-primary-700">
                Explore Creative →
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Resources Section -->
    <section class="py-20 container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-neutral-900 mb-4">
            Career Development Resources
          </h2>
          <p class="text-xl text-neutral-600 max-w-3xl mx-auto">
            Additional tools and resources to help you advance your career
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-neutral-900 mb-3">Industry Reports</h3>
            <p class="text-neutral-600 mb-4">
              Get insights into job market trends, salary data, and industry growth
            </p>
            <a href="/report/" class="text-primary-600 font-medium hover:text-primary-700">
              View Reports →
            </a>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-neutral-900 mb-3">Career Wiki</h3>
            <p class="text-neutral-600 mb-4">
              Comprehensive guides for hundreds of career paths and positions
            </p>
            <a href="/wiki/" class="text-primary-600 font-medium hover:text-primary-700">
              Browse Wiki →
            </a>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-neutral-900 mb-3">Job Search</h3>
            <p class="text-neutral-600 mb-4">
              Find current job openings and opportunities in your field
            </p>
            <a href="/search" class="text-primary-600 font-medium hover:text-primary-700">
              Start Searching →
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</MainLayout>