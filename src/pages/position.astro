---
import MainLayout from '@/layouts/MainLayout.astro';

const pageTitle = "Position Guide | Tying.ai";
const pageDescription = "Detailed position guides and career paths across technology, engineering, and business fields.";
---

<MainLayout title={pageTitle} description={pageDescription}>
  <div class="max-w-notion-wide mx-auto px-8 py-12">
    <!-- 页面标题 -->
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-notion-text mb-4">Position Guides</h1>
      <p class="text-lg text-notion-text-light">
        Comprehensive career guidance for technology, engineering, and business roles.
      </p>
    </div>

    <!-- Featured Positions -->
    <div class="mb-16">
      <h2 class="text-2xl font-bold text-notion-text mb-8">Featured Guides</h2>
      <div class="space-y-6">
        <div class="pb-6 border-b border-notion-border">
          <h3 class="text-lg font-semibold text-notion-text mb-2">Software Engineer</h3>
          <p class="text-notion-text-light mb-2">
            Complete guide to software engineering careers, from entry-level to senior positions.
          </p>
          <a href="/wiki/software-engineer" class="text-notion-text underline">View guide →</a>
        </div>

        <div class="pb-6 border-b border-notion-border">
          <h3 class="text-lg font-semibold text-notion-text mb-2">Product Manager</h3>
          <p class="text-notion-text-light mb-2">
            Navigate the intersection of technology and product management.
          </p>
          <a href="/wiki/product-manager" class="text-notion-text underline">View guide →</a>
        </div>

        <div class="pb-6 border-b border-notion-border">
          <h3 class="text-lg font-semibold text-notion-text mb-2">Data Scientist</h3>
          <p class="text-notion-text-light mb-2">
            Explore the world of data science and analytics careers.
          </p>
          <a href="/wiki/data-scientist" class="text-notion-text underline">View guide →</a>
        </div>
      </div>
    </div>

    <!-- Position Categories -->
    <div>
      <h2 class="text-2xl font-bold text-notion-text mb-8">Browse by Category</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <a href="/wiki#engineering" class="block p-4 border border-notion-border hover:border-notion-text">
          <h3 class="font-semibold text-notion-text mb-1">Engineering & Technology</h3>
          <p class="text-sm text-notion-text-light">30+ positions</p>
        </a>

        <a href="/wiki#business" class="block p-4 border border-notion-border hover:border-notion-text">
          <h3 class="font-semibold text-notion-text mb-1">Business & Finance</h3>
          <p class="text-sm text-notion-text-light">20+ positions</p>
        </a>

        <a href="/wiki#design" class="block p-4 border border-notion-border hover:border-notion-text">
          <h3 class="font-semibold text-notion-text mb-1">Creative & Design</h3>
          <p class="text-sm text-notion-text-light">15+ positions</p>
        </a>

        <a href="/wiki#healthcare" class="block p-4 border border-notion-border hover:border-notion-text">
          <h3 class="font-semibold text-notion-text mb-1">Healthcare & Medical</h3>
          <p class="text-sm text-notion-text-light">10+ positions</p>
        </a>

        <a href="/wiki#education" class="block p-4 border border-notion-border hover:border-notion-text">
          <h3 class="font-semibold text-notion-text mb-1">Education</h3>
          <p class="text-sm text-notion-text-light">8+ positions</p>
        </a>

        <a href="/wiki#legal" class="block p-4 border border-notion-border hover:border-notion-text">
          <h3 class="font-semibold text-notion-text mb-1">Legal & Compliance</h3>
          <p class="text-sm text-notion-text-light">6+ positions</p>
        </a>
      </div>
    </div>
  </div>
</MainLayout>
