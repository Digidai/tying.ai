---
import MainLayout from '@/layouts/MainLayout.astro';

const pageTitle = "Search Positions | Tying.ai";
const pageDescription = "Search and find your ideal career opportunity.";
---

<MainLayout title={pageTitle} description={pageDescription}>
  <div class="max-w-notion-wide mx-auto px-8 py-12">
    <!-- 页面标题 -->
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-notion-text mb-4">Search Positions</h1>
      <p class="text-lg text-notion-text-light">
        Find your ideal career opportunity with our comprehensive position guides.
      </p>
    </div>

    <!-- 搜索框 -->
    <div class="mb-16">
      <input
        type="search"
        placeholder="Search positions, skills, or companies..."
        class="w-full px-4 py-3 border border-notion-border text-notion-text placeholder:text-notion-text-light focus:outline-none focus:border-notion-text"
      />
    </div>

    <!-- 快速链接 -->
    <div>
      <h2 class="text-2xl font-bold text-notion-text mb-8">Browse All Positions</h2>
      <p class="text-notion-text-light mb-4">
        Explore our complete career wiki with detailed guides for 100+ positions across 8 industries.
      </p>
      <a href="/wiki" class="text-notion-text underline">View all positions →</a>
    </div>
  </div>
</MainLayout>
