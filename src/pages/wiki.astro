---
import MainLayout from '@/layouts/MainLayout.astro';

const pageTitle = 'Career Wiki | Tying.ai';
const pageDescription = 'Explore 100+ detailed career profiles across 8 industries.';
---

<MainLayout title={pageTitle} description={pageDescription}>
  <div class="max-w-notion-wide mx-auto px-8 py-12">
    <!-- 页面标题 -->
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-notion-text mb-4">Career Wiki</h1>
      <p class="text-lg text-notion-text-light">
        Comprehensive guides for 100+ career paths across technology, engineering, business, and
        creative industries.
      </p>
    </div>

    <!-- 职位分类列表 -->
    <div class="space-y-12">
      <!-- Engineering & Technology -->
      <section>
        <h2 class="text-2xl font-bold text-notion-text mb-6">Engineering & Technology</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <a
            href="/wiki/software-engineer"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Software Engineer</h3>
          </a>
          <a
            href="/wiki/data-scientist"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Data Scientist</h3>
          </a>
          <a
            href="/wiki/devops-engineer"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">DevOps Engineer</h3>
          </a>
          <a
            href="/wiki/product-manager"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Product Manager</h3>
          </a>
          <a
            href="/wiki/ux-designer"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">UX Designer</h3>
          </a>
          <a
            href="/wiki/technical-writer"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Technical Writer</h3>
          </a>
        </div>
      </section>

      <!-- Business & Finance -->
      <section>
        <h2 class="text-2xl font-bold text-notion-text mb-6">Business & Finance</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <a
            href="/wiki/marketing-manager"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Marketing Manager</h3>
          </a>
          <a
            href="/wiki/financial-analyst"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Financial Analyst</h3>
          </a>
          <a
            href="/wiki/business-consultant"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Business Consultant</h3>
          </a>
        </div>
      </section>

      <!-- Creative & Design -->
      <section>
        <h2 class="text-2xl font-bold text-notion-text mb-6">Creative & Design</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <a
            href="/wiki/graphic-designer"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Graphic Designer</h3>
          </a>
          <a
            href="/wiki/content-writer"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Content Writer</h3>
          </a>
          <a
            href="/wiki/video-editor"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Video Editor</h3>
          </a>
        </div>
      </section>

      <!-- Healthcare & Medical -->
      <section>
        <h2 class="text-2xl font-bold text-notion-text mb-6">Healthcare & Medical</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <a
            href="/wiki/registered-nurse"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Registered Nurse</h3>
          </a>
          <a
            href="/wiki/medical-doctor"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Medical Doctor</h3>
          </a>
          <a
            href="/wiki/pharmacist"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Pharmacist</h3>
          </a>
        </div>
      </section>

      <!-- Education -->
      <section>
        <h2 class="text-2xl font-bold text-notion-text mb-6">Education</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <a
            href="/wiki/teacher"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Teacher</h3>
          </a>
          <a
            href="/wiki/professor"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Professor</h3>
          </a>
          <a
            href="/wiki/training-specialist"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Training Specialist</h3>
          </a>
        </div>
      </section>

      <!-- Legal & Compliance -->
      <section>
        <h2 class="text-2xl font-bold text-notion-text mb-6">Legal & Compliance</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <a
            href="/wiki/lawyer"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Lawyer</h3>
          </a>
          <a
            href="/wiki/paralegal"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Paralegal</h3>
          </a>
          <a
            href="/wiki/compliance-officer"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Compliance Officer</h3>
          </a>
        </div>
      </section>

      <!-- Sales & Customer Service -->
      <section>
        <h2 class="text-2xl font-bold text-notion-text mb-6">Sales & Customer Service</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <a
            href="/wiki/sales-manager"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Sales Manager</h3>
          </a>
          <a
            href="/wiki/account-executive"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Account Executive</h3>
          </a>
          <a
            href="/wiki/customer-success-manager"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Customer Success Manager</h3>
          </a>
        </div>
      </section>

      <!-- Operations & Logistics -->
      <section>
        <h2 class="text-2xl font-bold text-notion-text mb-6">Operations & Logistics</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <a
            href="/wiki/operations-manager"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Operations Manager</h3>
          </a>
          <a
            href="/wiki/supply-chain-analyst"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Supply Chain Analyst</h3>
          </a>
          <a
            href="/wiki/project-manager"
            class="block p-4 border border-notion-border hover:border-notion-text"
          >
            <h3 class="font-medium text-notion-text">Project Manager</h3>
          </a>
        </div>
      </section>
    </div>
  </div>
</MainLayout>
