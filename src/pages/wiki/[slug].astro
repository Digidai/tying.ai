---
import NotionLayout from '@/layouts/NotionLayout.astro';

export async function getStaticPaths() {
  // 定义所有职位的 slug
  const positions = [
    // Engineering & Technology
    'software-engineer',
    'data-scientist',
    'devops-engineer',
    'product-manager',
    'ux-designer',
    'technical-writer',
    // Business & Finance
    'marketing-manager',
    'financial-analyst',
    'business-consultant',
    // Creative & Design
    'graphic-designer',
    'content-writer',
    'video-editor',
    // Healthcare & Medical
    'registered-nurse',
    'medical-doctor',
    'pharmacist',
    // Education
    'teacher',
    'professor',
    'training-specialist',
    // Legal & Compliance
    'lawyer',
    'paralegal',
    'compliance-officer',
    // Sales & Customer Service
    'sales-manager',
    'account-executive',
    'customer-success-manager',
    // Operations & Logistics
    'operations-manager',
    'supply-chain-analyst',
    'project-manager',
  ];

  return positions.map(slug => ({
    params: { slug },
  }));
}

const { slug } = Astro.params;

// 将 slug 转换为标题
const titleMap: Record<string, string> = {
  'software-engineer': 'Software Engineer',
  'data-scientist': 'Data Scientist',
  'devops-engineer': 'DevOps Engineer',
  'product-manager': 'Product Manager',
  'ux-designer': 'UX Designer',
  'technical-writer': 'Technical Writer',
  'marketing-manager': 'Marketing Manager',
  'financial-analyst': 'Financial Analyst',
  'business-consultant': 'Business Consultant',
  'graphic-designer': 'Graphic Designer',
  'content-writer': 'Content Writer',
  'video-editor': 'Video Editor',
  'registered-nurse': 'Registered Nurse',
  'medical-doctor': 'Medical Doctor',
  pharmacist: 'Pharmacist',
  teacher: 'Teacher',
  professor: 'Professor',
  'training-specialist': 'Training Specialist',
  lawyer: 'Lawyer',
  paralegal: 'Paralegal',
  'compliance-officer': 'Compliance Officer',
  'sales-manager': 'Sales Manager',
  'account-executive': 'Account Executive',
  'customer-success-manager': 'Customer Success Manager',
  'operations-manager': 'Operations Manager',
  'supply-chain-analyst': 'Supply Chain Analyst',
  'project-manager': 'Project Manager',
};

const title =
  titleMap[slug] ||
  slug
    .split('-')
    .map(word => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' ');

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Career Wiki', href: '/wiki' },
];
---

<NotionLayout
  title={`${title} | Career Wiki`}
  description={`Complete guide to becoming a ${title}. Learn about responsibilities, required skills, salary ranges, and career progression.`}
  breadcrumbs={breadcrumbs}
>
  <!-- Overview -->
  <h2>Overview</h2>
  <p>
    Comprehensive career guide for {title}. This page covers job responsibilities, required skills,
    career progression, salary information, and industry outlook.
  </p>

  <!-- Core Responsibilities -->
  <h2>Core Responsibilities</h2>
  <ul>
    <li>Perform key tasks related to the role</li>
    <li>Collaborate with team members and stakeholders</li>
    <li>Maintain professional standards and best practices</li>
    <li>Contribute to organizational goals and objectives</li>
    <li>Stay updated with industry trends and developments</li>
  </ul>

  <!-- Required Skills -->
  <h2>Required Skills</h2>

  <h3>Technical Skills</h3>
  <ul>
    <li>Industry-specific technical knowledge</li>
    <li>Proficiency with relevant tools and technologies</li>
    <li>Understanding of best practices and methodologies</li>
  </ul>

  <h3>Soft Skills</h3>
  <ul>
    <li>Effective communication</li>
    <li>Problem-solving and analytical thinking</li>
    <li>Team collaboration</li>
    <li>Time management</li>
    <li>Continuous learning mindset</li>
  </ul>

  <!-- Career Path -->
  <h2>Career Path</h2>

  <h3>Entry Level (0-2 years)</h3>
  <p>Junior position - Focus on learning fundamentals and building core skills.</p>

  <h3>Mid Level (2-5 years)</h3>
  <p>Intermediate position - Independently handle responsibilities and mentor juniors.</p>

  <h3>Senior Level (5-8 years)</h3>
  <p>Senior position - Lead projects and guide team members.</p>

  <h3>Leadership (8+ years)</h3>
  <p>Management or specialist position - Set direction and influence organizational decisions.</p>

  <!-- Salary Range -->
  <h2>Salary Range</h2>
  <table>
    <thead>
      <tr>
        <th>Level</th>
        <th>United States</th>
        <th>Europe</th>
        <th>Asia</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Entry (0-2 years)</td>
        <td>$40,000 - $60,000</td>
        <td>€30,000 - €45,000</td>
        <td>$20,000 - $35,000</td>
      </tr>
      <tr>
        <td>Mid (2-5 years)</td>
        <td>$60,000 - $90,000</td>
        <td>€45,000 - €70,000</td>
        <td>$35,000 - $55,000</td>
      </tr>
      <tr>
        <td>Senior (5-8 years)</td>
        <td>$90,000 - $130,000</td>
        <td>€70,000 - €100,000</td>
        <td>$55,000 - $80,000</td>
      </tr>
      <tr>
        <td>Leadership (8+ years)</td>
        <td>$130,000 - $200,000+</td>
        <td>€100,000 - €150,000+</td>
        <td>$80,000 - $120,000+</td>
      </tr>
    </tbody>
  </table>

  <!-- Education & Qualifications -->
  <h2>Education & Qualifications</h2>
  <ul>
    <li>Bachelor's degree in relevant field (preferred)</li>
    <li>Relevant certifications or training</li>
    <li>Portfolio or work samples (when applicable)</li>
    <li>Continuing education and professional development</li>
  </ul>

  <!-- Industry Outlook -->
  <h2>Industry Outlook</h2>
  <p>
    The career outlook for {title} remains positive with steady growth expected in the coming years.
    Professionals in this field should focus on continuous skill development and staying current with
    industry trends.
  </p>

  <!-- Getting Started -->
  <h2>Getting Started</h2>
  <ul>
    <li>Research the field and understand role requirements</li>
    <li>Develop relevant skills through education or self-study</li>
    <li>Build a portfolio or gain practical experience</li>
    <li>Network with professionals in the field</li>
    <li>Apply for entry-level positions or internships</li>
    <li>Continue learning and advancing your skills</li>
  </ul>
</NotionLayout>
